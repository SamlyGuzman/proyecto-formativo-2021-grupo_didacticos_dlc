<div class="row">
  <aside class="col-md-6">
    <div class="container">
      <div class="row justify-content-center">
        <div Style="color:white" class="col-lg-3 mb-4">.</div>
        <div class="col-md-12 col-lg-6 mb-4">
          <%= simple_form_for @reclamo do |f| %>
            <%= f.input :codigo %>
            <%= f.input :identificacion_del_cliente %>
            <%= f.input :nombre_del_cliente %>
            <%= f.input :producto_adquirido %>
            <%= f.input :fecha_de_compra %>
            <%= f.input :estado_del_producto %>
            <br>
            <div class="form-actions">
              <%= f.button :submit , class: 'btn btn-primary btn-block'%>
            </div>
          <% end %>
      </div>
    </div>
  </aside>
</div>